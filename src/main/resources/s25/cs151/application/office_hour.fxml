            <Button maxWidth="200" style="-fx-background-color: #e6dfc9; -fx-text-fill: black; -fx-font-size: 14px; -fx-border-radius: 5px;" text="CS 151 Zoom" />
            <Button maxWidth="200" style="-fx-background-color: #e6dfc9; -fx-text-fill: black; -fx-font-size: 14px; -fx-border-radius: 5px;" text="In-Person CS49" />
        </VBox>

    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 40; -fx-spacing: 6;">
            <HBox prefHeight="76.0" prefWidth="660.0" spacing="10" style="-fx-padding: 0 0 20 0;">
                <VBox prefHeight="42.0" prefWidth="240.0" style="-fx-spacing: 20;">
                    <children>
                        <Label text="Meet Your Prof" textFill="#1c2b42" maxWidth="-Infinity" wrapText="true">
                            <font>
                                <Font name="System Bold" size="21.0" />
                            </font>
                        </Label>
                        <HBox prefHeight="101.0" prefWidth="240.0" style="-fx-spacing: 6;">
                            <children>
                                <TextField promptText="Search Course..." style="-fx-font-size: 14px;" />
                                <Button style="-fx-background-color: #1c2b42; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 5px;" text="filter" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </HBox>

            <HBox alignment="CENTER_LEFT" prefHeight="262.0" prefWidth="660.0" spacing="20" style="-fx-spacing: 70;">

                <StackPane>
                    <Region style="-fx-padding: 5px 10px; -fx-background-color: #e6dfc9; -fx-border-color: transparent;-fx-background-radius: 10px; -fx-border-radius: 10px; -fx-effect: dropshadow(gaussian, gray, 10, 0.5, 0, 0);                    -fx-pref-height: 200; -fx-pref-width: 400;" />

                    <VBox alignment="CENTER" prefHeight="284.0" prefWidth="325.0" spacing="10" style="-fx-text-fill: #d3d3d3; -fx-border-radius: 10px; -fx-padding: 5px 10px;  -fx-pref-height: 200; -fx-pref-width: 400;">

