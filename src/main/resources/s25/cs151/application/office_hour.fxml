                        <TextField fx:id="year" alignment="CENTER" promptText="Enter year" style=" -fx-background-color: #1c2b42; -fx-text-fill: #d3d3d3;  -fx-background-radius: 15px; -fx-padding: 5px 5px; -fx-max-width: 200; -fx-pref-width: 200; -fx-font-size: 14px; " />

                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Select Days" />
                        <HBox alignment="CENTER" spacing="15">
                            <CheckBox text="M" />
                            <CheckBox text="T" />
                            <CheckBox text="W" />
                            <CheckBox text="TH" />
                            <CheckBox text="F" />
                        </HBox>
                    </VBox>
                </StackPane>

                <GridPane alignment="CENTER" hgap="10" vgap="15" style="-fx-background-color: #e6dfc9; -fx-background-radius: 15px; -fx-border-radius: 10px; -fx-effect: dropshadow(gaussian, gray, 10, 0.5, 0, 0);  -fx-padding: 5px 10px; -fx-pref-width: 400; -fx-pref-height: 150;">

                    <Label alignment="CENTER" style="-fx-pref-width: 200px; -fx-background-color: #1c2b42; -fx-text-fill: white; -fx-font-weight: bold;  -fx-background-radius: 15px;  -fx-padding: 5px 5px; -fx-effect: dropshadow(gaussian, gray, 10, 0.5, 0, 0);" text="Course Code" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="courseCode" alignment="CENTER" text="Math 42" style="-fx-text-fill: #d3d3d3" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label alignment="CENTER" style="-fx-pref-width: 200px; -fx-background-color: #1c2b42; -fx-text-fill: white; -fx-font-weight: bold;  -fx-background-radius: 15px; -fx-padding: 5px 15px; -fx-effect: dropshadow(gaussian, gray, 10, 0.5, 0, 0);" text="Course Name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="courseName" alignment="CENTER" text="Discrete Math" style="-fx-text-fill: #d3d3d3" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label alignment="CENTER" style="-fx-pref-width: 200px; -fx-background-color: #1c2b42; -fx-text-fill: white; -fx-font-weight: bold;  -fx-background-radius: 15px; -fx-padding: 5px 15px; -fx-effect: dropshadow(gaussian, gray, 10, 0.5, 0, 0);" text="Section Number" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="sectionNumber" alignment="CENTER" text="04" style="-fx-text-fill: #d3d3d3" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>


            </HBox>
           <HBox  spacing="5" prefWidth="660.0" style="-fx-padding: 40px 20px 20px 0;">
            <VBox alignment="CENTER"  spacing="5" style="-fx-border-color: #1c2b42; -fx-border-radius: 10px; -fx-padding: 5px 10px; -fx-background-color: #1c2b42; -fx-border-radius: 10px; -fx-text-fill: white; -fx-padding: 10; -fx-pref-width: 250; -fx-pref-height: 250; ">
                <Label alignment="CENTER" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="TIME SLOT" />
                <ImageView fitWidth="100" fitHeight="100">
                    <image>
                        <Image url="@icons/schedule.png"></Image>
                    </image>
                </ImageView>
            </VBox>
               <GridPane alignment="CENTER" hgap="10" vgap="20" prefHeight="26.0" prefWidth="581.0" style="-fx-padding: 10; -fx-font-weight: bold;  -fx-background-radius: 15px; -fx-padding: 5px 15px; -fx-border-radius: 10px; -fx-effect: dropshadow(gaussian, gray, 10, 0.5, 0, 0);">
                       <Label alignment="CENTER" text="FROM" style="-fx-pref-width: 200px; -fx-background-color: #1c2b42; -fx-text-fill: white; -fx-font-weight: bold;  -fx-background-radius: 15px; -fx-padding: 5px 15px;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                       <TextField fx:id="startTime" alignment="CENTER" style="-fx-pref-width: 120; -fx-font-weight: bold;  -fx-background-radius: 15px; -fx-padding: 5px 15px;" text="3:30 PM" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                       <Label alignment="CENTER" text="TO" style="-fx-pref-width: 200px; -fx-background-color: #1c2b42; -fx-text-fill: white; -fx-font-weight: bold;  -fx-background-radius: 15px; -fx-padding: 5px 15px;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                       <TextField fx:id="endTime" alignment="CENTER" style="-fx-pref-width: 120; -fx-font-weight: bold;  -fx-background-radius: 15px; -fx-padding: 5px 15px;" text="4:45 PM" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

               </GridPane>
           </HBox>
            <HBox alignment="BOTTOM_RIGHT" spacing="10" style="-fx-padding: 10px;">
                <Button text="Dashboard" onAction="#goToHomePage" style="-fx-background-color: #1c2b42; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-padding: 10px 15px;"/>
                <Button text="Submit" style="-fx-background-color: #1c2b42; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-padding: 10px 15px;"/>
            </HBox>
        </VBox>
