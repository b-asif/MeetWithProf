<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #e6dfc9;" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="s25.cs151.application.OfficeHourController">

    <left>
        <VBox prefWidth="200" spacing="10" style="-fx-background-color: #1c2b42; -fx-padding: 10;">
